{% extends "layout.twig" %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 fw-bold m-0">Добавить клиента</h1>
        <a class="btn btn-outline-secondary" href="/clients">Назад</a>
    </div>

    {% if errors %}
        <div class="alert alert-danger">
            <div class="fw-bold mb-2">Проверьте поля:</div>
            <ul class="mb-0">
                {% for e in errors %}<li>{{ e|e }}</li>{% endfor %}
            </ul>
        </div>
    {% endif %}

    <div class="card app-card app-shadow">
        <div class="card-body p-4">
            <form method="post" action="/clients/create" class="row g-3">
                <div class="col-12">
                    <label class="form-label fw-semibold">ФИО *</label>
                    <input class="form-control" name="full_name" value="{{ data.full_name|e }}" required>
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label fw-semibold">Телефон</label>
                    <input class="form-control" name="phone" value="{{ data.phone|e }}">
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label fw-semibold">Адрес</label>
                    <input class="form-control" name="address" value="{{ data.address|e }}">
                </div>

                <div class="col-12">
                    <label class="form-label fw-semibold">Заметки</label>
                    <textarea class="form-control" name="notes" rows="3">{{ data.notes|e }}</textarea>
                </div>

                <div class="col-12 d-flex gap-2">
                    <button class="btn btn-success btn-edit" type="submit">Сохранить</button>
                    <a class="btn btn-outline-secondary" href="/clients">Отмена</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
