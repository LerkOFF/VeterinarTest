{% extends "layout.twig" %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h4 mb-1">Редактировать клиента</h1>
            <div class="text-muted small">
                Клиент: <a class="text-decoration-none" href="/clients/{{ client.id }}">{{ client.full_name }}</a>
            </div>
        </div>
        <a class="btn btn-outline-secondary" href="{{ back_url }}">Назад</a>
    </div>

    {% if errors %}
        <div class="alert alert-danger">
            <ul class="mb-0">
                {% for e in errors %}
                    <li>{{ e }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form method="post" class="bg-white rounded shadow-sm p-4">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">ФИО *</label>
                <input class="form-control" name="full_name" value="{{ data.full_name }}">
            </div>

            <div class="col-md-6">
                <label class="form-label">Телефон</label>
                <input class="form-control" name="phone" value="{{ data.phone }}">
            </div>

            <div class="col-12">
                <label class="form-label">Адрес</label>
                <input class="form-control" name="address" value="{{ data.address }}">
            </div>

            <div class="col-12">
                <label class="form-label">Заметки</label>
                <textarea class="form-control" name="notes" rows="3">{{ data.notes }}</textarea>
            </div>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary" type="submit">Сохранить</button>
            <a class="btn btn-outline-secondary" href="{{ back_url }}">Отмена</a>
        </div>

        <div class="form-text mt-2">
            * обязательна только ФИО. Остальные поля можно оставлять пустыми.
        </div>
    </form>
{% endblock %}
