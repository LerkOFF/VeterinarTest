{% extends "layout.twig" %}

{% block content %}
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
            <h1 class="h4 fw-bold m-0">Карточка питомца</h1>
            <div class="muted small">
                {% if pet.client_full_name %}
                    Клиент: <a href="/clients/{{ pet.client_id }}">{{ pet.client_full_name|e }}</a>
                {% endif %}
            </div>
        </div>

        <div class="d-flex gap-2">
            {% if pet.client_id %}
                <a class="btn btn-outline-secondary" href="/clients/{{ pet.client_id }}">Назад к клиенту</a>
            {% else %}
                <a class="btn btn-outline-secondary" href="/pets">Назад</a>
            {% endif %}

            <a class="btn btn-success btn-edit" href="/pets/{{ pet.id }}/edit?back=/pets/{{ pet.id }}">Редактировать</a>

            <form method="post" action="/pets/{{ pet.id }}/delete" onsubmit="return confirm('Удалить питомца и все его визиты?');">
                <button class="btn btn-danger" type="submit">Удалить</button>
            </form>
        </div>
    </div>

    <div class="card app-card app-shadow mb-3">
        <div class="card-body p-4">
            <div class="fw-bold fs-4 mb-2">{{ pet.name|e }}</div>

            <div class="row g-3 kv">
                <div class="col-12 col-md-4">
                    <div class="label">Вид</div>
                    <div class="value">{{ pet.species ? pet.species|e : '—' }}</div>
                </div>

                <div class="col-12 col-md-4">
                    <div class="label">Порода</div>
                    <div class="value">{{ pet.breed ? pet.breed|e : '—' }}</div>
                </div>

                <div class="col-12 col-md-4">
                    <div class="label">Дата рождения</div>
                    <div class="value">{{ pet.birth_date_view ? pet.birth_date_view|e : '—' }}</div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="label">Лекарства</div>
                    <div class="value fw-normal">{{ pet.medications ? pet.medications|e : '—' }}</div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="label">Заметки</div>
                    <div class="value fw-normal">{{ pet.notes ? pet.notes|e : '—' }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-2">
        <h2 class="h5 fw-bold m-0">Визиты</h2>
        <a class="btn btn-success btn-edit" href="/pets/{{ pet.id }}/visits/create">+ Добавить визит</a>
    </div>

    <div class="card app-card app-shadow">
        <div class="card-body p-0">
            {% if visits is empty %}
                <div class="p-4 muted">У питомца пока нет визитов.</div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped mb-0 align-middle">
                        <thead>
                        <tr>
                            <th style="width: 80px;">№ п/п</th>
                            <th style="width: 140px;">Дата</th>
                            <th style="width: 110px;">Время</th>
                            <th>Жалоба</th>
                            <th style="width: 260px;">Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for visit in visits %}
                            <tr>
                                {# ✅ ВМЕСТО ID — НОМЕР П/П #}
                                <td class="fw-semibold">{{ loop.index }}</td>

                                <td>{{ visit.visit_date ? visit.visit_date|e : '—' }}</td>
                                <td>{{ visit.visit_time ? visit.visit_time|e : '—' }}</td>
                                <td>{{ visit.complaint ? visit.complaint|e : '—' }}</td>

                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <a class="btn btn-success btn-edit btn-sm"
                                           href="/pets/{{ pet.id }}/visits/{{ visit.id }}/edit">
                                            Редактировать
                                        </a>

                                        <form method="post"
                                              action="/pets/{{ pet.id }}/visits/{{ visit.id }}/delete"
                                              onsubmit="return confirm('Удалить визит?');">
                                            <button class="btn btn-danger btn-sm" type="submit">Удалить</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
